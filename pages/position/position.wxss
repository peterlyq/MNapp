  width: 100%;
}
.location{
  margin-top: 20rpx;
}
.top{
  height: 80rpx;
  width: 90%;
  display: flex;
  position: fixed;
  top: 20rpx;
  left: 5%;
  z-index: 100;
  background-color: white;
  border-radius: 20rpx;
  line-height: 80rpx;
}
.back{
  width: 10%;
  text-align: center;
}
.search-input{
  height: 100%;
  margin-left: 20rpx;
}
.region{
  border-left: 2rpx solid #eeeeee;
}
.search-box{
  width: 95%;
  display: flex;
}
.address-list{
  background-color: white;
  height: 30%;
}
.near-list{
  height: 100%;
}
.near-item{
  height: 100rpx;
  border-bottom: 2rpx;
  display: flex;
}

.title{
  font-size: 28rpx;
  line-height: 70rpx;
}
.add{
  font-size: 24rpx;
  color: #777777;
  line-height: 30rpx;
}
.choose{
  color: #3196F9;
}
.add-item{
  width: 100%;
}
.current-site{
  color: #3196F9;
  width: 100rpx;
  font-size: 40rpx;
  line-height: 100rpx;
  text-align: center;
}


/* 按钮区域 */
.mapBox{
  position: relative;
  width: 100%;
  height: 60%;
}
#map{
  width: 100%; 
  height: 100%;
}
.tips-area{
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  z-index: 10;
  display: flex;
  align-items: center;
  justify-content: center;
}
.tips-location{
  width: 60%;
  height: 60%;
}
.tips-mid{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-100%);
  z-index: 10;
}